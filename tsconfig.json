{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2020", "dom", "esnext"],
    "types": ["node", "jest"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "strict": true,
    "target": "es2020"
  },
  "include": ["lib/**/*.ts", "lib/**/*.tsx"],
  "exclude": [
    "lib/**/*_stories.tsx",
    "lib/**/*_test.tsx",
    "lib/**/*_fixture.tsx"
  ]
}
